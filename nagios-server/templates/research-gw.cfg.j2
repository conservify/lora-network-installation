define host {
  use   linux-server
  host_name  {{ research_gw_hostname }}
  alias     Research Gateway
  address {{ research_gw_ip }}
  max_check_attempts 5
}

define service{
        use                             generic-service
        host_name                       {{ research_gw_hostname }}
        service_description             PING
        check_command                   check_ping!100.0,20%!500.0,60%
        }


